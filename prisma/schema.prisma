generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  climateData ClimateData[]
}

model City {
  id        Int      @id @default(autoincrement())
  name      String
  state     String
  createdAt DateTime @default(now())

  climateData ClimateData[]

  @@unique([name, state])
}

model ClimateData {
  id          Int      @id @default(autoincrement())
  temperature Float
  rainfall    Float
  airQuality  Int
  recordedAt  DateTime

  cityId Int
  userId Int

  city City @relation(fields: [cityId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([cityId])
  @@index([recordedAt])
}

enum Role {
  USER
  ADMIN
}
model ClimateData {
  id          Int      @id @default(autoincrement())
  temperature Float
  rainfall    Float
  airQuality  Int
  recordedAt  DateTime @default(now())

  cityId Int
  userId Int

  @@index([cityId])
  @@index([recordedAt])
}
